<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Views.Settings"
             xmlns:vm="clr-namespace:ViewModels"
             x:DataType="vm:SettingsViewModel">
  <StackPanel>
    <Button Command="{Binding GoBackToMainMenuCommand}">Go back to main menu</Button>
    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
      <Label Content="Volume:"></Label>
      <Slider Name="VolumeSlider" Minimum="0" Maximum="1.0" Value="0.5" ></Slider>

      <Button Content="Apply" Command="{Binding ApplySettingsCommand}"></Button>
    </StackPanel>
  </StackPanel>
</UserControl>
