<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="400"
             x:Class="Views.MainMenu"
             xmlns:vm="clr-namespace:ViewModels"
             x:DataType="vm:MainMenuViewModel">
    
    <StackPanel VerticalAlignment="Center">
        <Label HorizontalAlignment="Center" FontSize="70">Charter</Label>
        <Grid RowDefinitions="50,50,50,50" HorizontalAlignment="Center" VerticalAlignment="Center" Height="250" Width="250">
            <Button Command="{Binding PlayCommand}" HorizontalAlignment="Stretch" Padding="0" Margin="0">
                <Grid ColumnDefinitions="auto,*,auto">
                    <Image Source="avares://DuszaCompetitionApplication/Assets/Images/Button/button_left_base.png" HorizontalAlignment="Left" Height="40"/>
                    <Label Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Play"/>
                    <Image Grid.Column="2" Source="avares://DuszaCompetitionApplication/Assets/Images/Button/button_right_base.png" HorizontalAlignment="Right" Height="40"/>
                </Grid>
            </Button>

            <Button Grid.Row="1" Command="{Binding SettingsCommand}" HorizontalAlignment="Stretch" Padding="0" Margin="0">
                <Grid ColumnDefinitions="auto,*,auto">
                    <Image Source="avares://DuszaCompetitionApplication/Assets/Images/Button/button_left_base.png" HorizontalAlignment="Left" Height="40"/>
                    <Label Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Settings"/>
                    <Image Grid.Column="2" Source="avares://DuszaCompetitionApplication/Assets/Images/Button/button_right_base.png" HorizontalAlignment="Right" Height="40"/>
                </Grid>
            </Button>

            <Button Grid.Row="2" Command="{Binding CreditsCommand}" HorizontalAlignment="Stretch" Padding="0" Margin="0">
                <Grid ColumnDefinitions="auto,*,auto">
                    <Image Source="avares://DuszaCompetitionApplication/Assets/Images/Button/button_left_base.png" HorizontalAlignment="Left" Height="40"/>
                    <Label Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Credits"/>
                    <Image Grid.Column="2" Source="avares://DuszaCompetitionApplication/Assets/Images/Button/button_right_base.png" HorizontalAlignment="Right" Height="40"/>
                </Grid>
            </Button>

            <Button Grid.Row="3" Command="{Binding ExitCommand}" HorizontalAlignment="Stretch" Padding="0" Margin="0">
                <Grid ColumnDefinitions="auto,*,auto">
                    <Image Source="avares://DuszaCompetitionApplication/Assets/Images/Button/button_left_base.png" HorizontalAlignment="Left" Height="40"/>
                    <Label Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Exit"/>
                    <Image Grid.Column="2" Source="avares://DuszaCompetitionApplication/Assets/Images/Button/button_right_base.png" HorizontalAlignment="Right" Height="40"/>
                </Grid>
            </Button>
        </Grid>
    </StackPanel>
</UserControl>
