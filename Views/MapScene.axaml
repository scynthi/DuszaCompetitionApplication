<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Views.MapScene"
             xmlns:vm="clr-namespace:ViewModels"
             x:DataType="vm:MapSceneViewModel">

  <Grid RowDefinitions="*, 70" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
    <StackPanel Name="DungeonPanel" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Orientation="Horizontal" Spacing="50" Margin="50,0,50,0">
    </StackPanel>
    <Grid Grid.Row="1" ColumnDefinitions="Auto, Auto, Auto" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" ColumnSpacing="10" Margin="10,0,10,30">
      <Button Command="{Binding GoBackToTitleScreenCommand}">Title Screen</Button>
      <Button Grid.Column="1">Deck</Button>
      <Button Grid.Column="2">All cards</Button>
    </Grid>
  </Grid>
</UserControl>
